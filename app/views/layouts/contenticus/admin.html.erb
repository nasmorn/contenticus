<!DOCTYPE html>
<html>
<head>
  <title>Contenticus</title>
  <%= stylesheet_link_tag "contenticus/admin/application", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "contenticus/admin/application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Contenticus</a>
    </div>    
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li>
          <%= link_to "Pages", contenticus_admin_pages_path %>
        </li>
        <li>
          <%= link_to "Images", contenticus_admin_images_path %>
        </li>        
      </ul>
    </div>
    <%= yield :formbar %>
  </div>
</div>


<div class="container-fluid main <%= "with-formbar" if content_for?(:formbar) %> ">
  <%= yield %>
</div>

</body>
</html>
